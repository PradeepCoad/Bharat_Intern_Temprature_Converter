<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3E3E3E"
    tools:context=".calculate">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_84sdp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/whatToDo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_30sdp"
            android:fontFamily="@font/almendra_bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_28ssp" />

        <TextView
            android:id="@+id/calTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_44sdp"
            android:fontFamily="@font/carter_one"
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp" />

        <EditText
            android:id="@+id/inpTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/EnterTempValue"
            android:inputType="number|numberDecimal"
            android:textColor="#FFFFFF"
            android:textColorHint="#B6B4B4" />

        <Button
            android:id="@+id/btnConvert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:backgroundTint="#01C6DC"
            android:fontFamily="@font/carter_one"
            android:text="@string/Convert"
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>